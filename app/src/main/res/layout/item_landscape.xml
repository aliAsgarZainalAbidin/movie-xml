<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingHorizontal="8dp"
    android:background="@color/dark_blue_900">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mcv_il_image"
        android:layout_width="200dp"
        android:layout_height="123dp"
        app:cardCornerRadius="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_il_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/landscape" />

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/mtv_il_title"
        style="@style/TextAppearance.MaterialComponents.Subtitle1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/mcv_il_image"
        app:layout_constraintStart_toStartOf="@id/mcv_il_image"
        app:layout_constraintTop_toBottomOf="@id/mcv_il_image"
        tools:text="Tv Show amazing show wonderful" />

    <com.google.android.material.textview.MaterialTextView
        style="@style/TextAppearance.MaterialComponents.Caption"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@id/mcv_il_image"
        app:layout_constraintStart_toStartOf="@id/mcv_il_image"
        app:layout_constraintTop_toBottomOf="@id/mtv_il_title"
        tools:text="2021-08-11" />

    <com.google.android.material.progressindicator.CircularProgressIndicator
        app:layout_constraintBottom_toBottomOf="@id/mcv_il_image"
        app:layout_constraintEnd_toEndOf="@id/mcv_il_image"
        app:layout_constraintTop_toBottomOf="@id/mcv_il_image"
        android:id="@+id/cpi_il_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_ellipse_1"
        android:elevation="1dp"
        android:progress="80"
        app:indicatorColor="@color/green_500" />

    <com.google.android.material.textview.MaterialTextView
        style="@style/TextAppearance.MaterialComponents.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        android:text="80%"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/cpi_il_indicator"
        app:layout_constraintEnd_toEndOf="@id/cpi_il_indicator"
        app:layout_constraintStart_toStartOf="@id/cpi_il_indicator"
        app:layout_constraintTop_toTopOf="@id/cpi_il_indicator" />

</androidx.constraintlayout.widget.ConstraintLayout>